<div class="messages">

	<h1><%= current_user.user_name %>'s Inbox</h1>
	<br>
	<h3>total count: (<%= current_user.messages_received.count %>)</h3>
	<br>
	<% current_user.messages_received.reverse.each do |m| %>
	<ul>
		<li> <h2>from: <%= User.find(m.user_sender).user_name %></h2></li>
		<br>
		<li> <h2>about: <%= Project.find(m.project_id).title %></h2></li>
		<br>
		<li><h2>link to: <a href='/messages/<%= m.id %>'> <%= m.title %> </a></h2></li>
		<hr>
	</ul>
	
	<% end %>

</div>
