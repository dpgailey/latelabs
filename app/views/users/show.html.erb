<div class="row">

	<div class="span5">

		<div class="user_info">
			<br>
			<ul>
				<li><img src="http://www.gravatar.com/avatar/<%= @user.gravartar_id %>"/></li>
				<li>Username: <%= @user.user_name %></li>
				<li>Location: <%= @user.location %></li>
				<br>
				<li>GitHub Information</li>
				<li>Followers: <%= @user.gh_followers %></li>
				<li>Following: <%= @user.gh_following %></li>
				<li>Public Repos: <%= @user.gh_public_repos %></li>
				<li>Private Repos: <%= @user.gh_private_repos %></li>
			</ul>
		</div>
		
<% unless current_user.id != @user.id %>	
		<div class="new_project">
			<%= link_to "New Project", :controller => "projects", :action => "new" %>
		</div>
<% end %>

<div class="activity_feed">
			<% @api_activity.each do |activity| %>
				<ul>
			  <li><%= activity.type %></li>
			  <li><%= activity.name %></li>
			  <li><%= activity.description %></li>
			  <li><%= activity.created_at %></li>
			  </ul>
			<% end %>				
		</div>
	</div>

	<div class="span7">

		<% @user.projects.each do |p| %>
			<ul>
		  <li><%= p.title %></li>
		  <li><%= p.explanation %></li>
		  </ul>
		<% end %>				
	</div>
</div>



